{
  "name": "react-native-ridge-navigation",
  "version": "1.15.6",
  "description": "test",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest --config=jest.config.js --watchAll=false --passWithNoTests",
    "test-watch": "jest --config=jest.config.js --watchAll --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "husky install && bob build",
    "release": "release-it --ci --github.autoGenerate",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods",
    "prepack": "bob build",
    "build-example": "cd example && expo build:web"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/web-ridge/react-native-ridge-navigation",
  "author": "Richard Lindhout <richard.lindhout@webridge.nl> (https://www.webridge.nl)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/web-ridge/react-native-ridge-navigation/issues"
  },
  "homepage": "https://github.com/web-ridge/react-native-ridge-navigation#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/config-conventional": "^17.0.2",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/jest-native": "^5.4.0",
    "@testing-library/react-native": "^11.5.0",
    "@types/color": "^3.0.3",
    "@types/jest": "^29.2.4",
    "@types/react": "^18.0.28",
    "@types/react-native": "^0.71.3",
    "color": "^4.2.3",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "expo-cli": "^6.0.8",
    "expo-linking": "^4.0.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "navigation": "^6.1.0",
    "navigation-react": "^4.5.1",
    "navigation-react-mobile": "^3.9.0",
    "navigation-react-native": "^9.2.1",
    "navigation-react-native-web": "^1.3.0",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "^18.2.0",
    "react-native": "^0.70.6",
    "react-native-builder-bob": "^0.20.4",
    "release-it": "^15.0.0",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "color": "*",
    "expo-linking": "*",
    "navigation": "*",
    "navigation-react": "*",
    "navigation-react-mobile": "*",
    "navigation-react-native": "*",
    "react": "*",
    "react-native": "*"
  },
  "resolutions": {
    "@types/react": "^18.0.28",
    "@types/react-native": "^0.71.3"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
